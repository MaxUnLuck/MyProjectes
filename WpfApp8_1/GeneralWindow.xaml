<Window x:Class="WpfApp8_1.GeneralWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8_1"
        mc:Ignorable="d"
        Title="GeneralWindow" Height="450" Width="800" ResizeMode="NoResize" Closed="TotalExit">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF3B3B3B" Offset="1"/>
                <GradientStop Color="#FFBEBEBE" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Menu Height="40" VerticalAlignment="Top">
            <Menu.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF3B3B3B" Offset="1"/>
                    <GradientStop Color="#FFBEBEBE" Offset="0.531"/>
                    <GradientStop Color="#FF6C6C6C" Offset="0"/>
                </LinearGradientBrush>
            </Menu.Background>
            <MenuItem x:Name="MenuLeave" Header="Выйти из учетной записи" Click="MenuItem_Click" FontWeight="Bold">
                <MenuItem.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF757575" Offset="1"/>
                        <GradientStop Color="#FFBEBEBE" Offset="0.531"/>
                        <GradientStop Color="#FF6C6C6C" Offset="0"/>
                    </LinearGradientBrush>
                </MenuItem.Background>
            </MenuItem>
            <MenuItem x:Name="MenuCreateOrder" Header="Создать заказ" FontWeight="Bold" Click="MenuCreateOrder_Click">
                <MenuItem.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF757575" Offset="1"/>
                        <GradientStop Color="#FFBEBEBE" Offset="0.531"/>
                        <GradientStop Color="#FF6C6C6C" Offset="0"/>
                    </LinearGradientBrush>
                </MenuItem.Background>
            </MenuItem>
            <MenuItem x:Name="MenuSewOrder" Header="Смотреть заказы" FontWeight="Bold" Click="MenuSewOrder_Click">
                <MenuItem.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF757575" Offset="1"/>
                        <GradientStop Color="#FFBEBEBE" Offset="0.531"/>
                        <GradientStop Color="#FF6C6C6C" Offset="0"/>
                    </LinearGradientBrush>
                </MenuItem.Background>
            </MenuItem>
            <MenuItem x:Name="MenuAdministration" Header="Администрирование" FontWeight="Bold" Click="MenuAdministration_Click">
                <MenuItem.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF757575" Offset="1"/>
                        <GradientStop Color="#FFBEBEBE" Offset="0.531"/>
                        <GradientStop Color="#FF6C6C6C" Offset="0"/>
                    </LinearGradientBrush>
                </MenuItem.Background>
                <Button Content="Учетные записи"/>
            </MenuItem>
            <MenuItem x:Name="MenuAboutProgram" Header="Справка о программе" Height="40" FontWeight="Bold" Click="MenuAboutProgram_Click">
                <MenuItem.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF757575" Offset="1"/>
                        <GradientStop Color="#FFBEBEBE" Offset="0.531"/>
                        <GradientStop Color="#FF6C6C6C" Offset="0"/>
                    </LinearGradientBrush>
                </MenuItem.Background>
            </MenuItem>
        </Menu>
        <Label Content="Логин:" HorizontalAlignment="Left" Height="44" Margin="50,59,0,0" VerticalAlignment="Top" Width="200" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" Height="40" Margin="50,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontFamily="Cascadia Code" FontSize="36">
            <TextBlock.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFBBBBBB" Offset="0"/>
                    <GradientStop Color="#FFDEDEDE" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Background>
        </TextBlock>
        <Label Content="Имя:" HorizontalAlignment="Left" Height="44" Margin="50,145,0,0" VerticalAlignment="Top" Width="200" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" Height="40" Margin="50,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontFamily="Cascadia Code" FontSize="36">
            <TextBlock.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFBBBBBB" Offset="0"/>
                    <GradientStop Color="#FFDEDEDE" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Background>
        </TextBlock>
        <Label Content="Фамилия:" HorizontalAlignment="Left" Height="44" Margin="255,145,0,0" VerticalAlignment="Top" Width="200" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" Height="40" Margin="255,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontFamily="Cascadia Code" FontSize="36">
            <TextBlock.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFBBBBBB" Offset="0"/>
                    <GradientStop Color="#FFDEDEDE" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Background>
        </TextBlock>
        <Label Content="Очество:" HorizontalAlignment="Left" Height="44" Margin="460,145,0,0" VerticalAlignment="Top" Width="200" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" Height="40" Margin="460,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontFamily="Cascadia Code" FontSize="36">
            <TextBlock.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFBBBBBB" Offset="0"/>
                    <GradientStop Color="#FFDEDEDE" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Background>
        </TextBlock>
        <Label Content="Роль:" HorizontalAlignment="Left" Height="44" Margin="50,231,0,0" VerticalAlignment="Top" Width="200" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" Height="40" Margin="50,275,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontFamily="Cascadia Code" FontSize="36">
            <TextBlock.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFBBBBBB" Offset="0"/>
                    <GradientStop Color="#FFDEDEDE" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Background>
        </TextBlock>
        <Label Content="Почта:" HorizontalAlignment="Left" Height="44" Margin="255,231,0,0" VerticalAlignment="Top" Width="200" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" Height="40" Margin="255,275,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontFamily="Cascadia Code" FontSize="36">
            <TextBlock.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFBBBBBB" Offset="0"/>
                    <GradientStop Color="#FFDEDEDE" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Background>
        </TextBlock>
    </Grid>
</Window>
