<Window x:Class="WpfApp8_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8_1"
        mc:Ignorable="d"
        Title="Вход" Height="400" Width="300">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF3B3B3B" Offset="1"/>
                <GradientStop Color="#FFBEBEBE" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="AcceptButton" Content="Войти" HorizontalAlignment="Center" Height="70" Margin="0,237,0,0" VerticalAlignment="Top" Width="200" FontFamily="Cascadia Code" FontSize="36" Foreground="Black" BorderBrush="Black" Click="AcceptButton_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFBEBEBE" Offset="0"/>
                    <GradientStop Color="#FF7C7C7C" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Content="Пароль:" HorizontalAlignment="Center" Height="44" Margin="0,148,0,0" VerticalAlignment="Top" Width="200" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="24"/>
        <Label Content="Логин:" HorizontalAlignment="Center" Height="44" Margin="0,59,0,0" VerticalAlignment="Top" Width="200" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="24"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Center" Height="40" Margin="0,192,0,0" VerticalAlignment="Top" Width="200" FontFamily="Cascadia Code" FontSize="36">
            <PasswordBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFBBBBBB" Offset="0"/>
                    <GradientStop Color="#FFDEDEDE" Offset="1"/>
                </LinearGradientBrush>
            </PasswordBox.Background>
        </PasswordBox>
        <TextBox x:Name="LoginBox" HorizontalAlignment="Center" Height="45" Margin="0,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontFamily="Cascadia Code" FontSize="36">
            <TextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFBBBBBB" Offset="0"/>
                    <GradientStop Color="#FFDEDEDE" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.Background>
        </TextBox>

    </Grid>
</Window>
