<Window x:Class="WpfApp8_1.WindowEditOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8_1"
        mc:Ignorable="d"
        Title="Изменение заказа" Height="350" Width="700" ResizeMode="NoResize" Closed="isClosed">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF3B3B3B" Offset="1"/>
                <GradientStop Color="#FFBEBEBE" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Заказчик:" HorizontalAlignment="Left" Margin="22,88,0,0" Width="139" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="24" FontSize="20" Height="30" VerticalAlignment="Top"/>
        <Label Content="Водитель:" HorizontalAlignment="Left" Margin="22,133,0,0" Width="139" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="24" FontSize="20" Height="30" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="166,89,0,0" TextWrapping="Wrap" Width="120" FontFamily="Cascadia Code" FontSize="20" Height="30" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="166,133,0,0" TextWrapping="Wrap" Width="120" FontFamily="Cascadia Code" FontSize="20" Height="30" VerticalAlignment="Top"/>
        <Label Content="Дата начала:" HorizontalAlignment="Left" Height="30" Margin="22,217,0,0" VerticalAlignment="Top" Width="139" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="24" FontSize="20"/>
        <Label Content="Дата конца:" HorizontalAlignment="Left" Height="30" Margin="22,255,0,0" VerticalAlignment="Top" Width="139" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="24" FontSize="20"/>
        <TextBox HorizontalAlignment="Left" Height="30" Margin="166,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontFamily="Cascadia Code" FontSize="20"/>
        <TextBox HorizontalAlignment="Left" Height="30" Margin="166,255,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontFamily="Cascadia Code" FontSize="20"/>
        <RadioButton Content="Детское сиденье" Margin="532,124,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Cascadia Code" Height="30" HorizontalAlignment="Left" Width="158" GroupName="2"/>
        <RadioButton Content="Груз" Margin="532,159,0,0" FontSize="14" FontFamily="Cascadia Code" HorizontalAlignment="Left" Width="158" Height="30" VerticalAlignment="Top" GroupName="3"/>
        <RadioButton Content="Пассажиры" Margin="532,92,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Cascadia Code" Height="30" HorizontalAlignment="Left" Width="158" GroupName="1"/>
        <Label Content="Услуги:" Height="30" Margin="387,89,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="24" FontSize="20" HorizontalAlignment="Left" Width="140"/>
        <Label Content="Тип заказа:" HorizontalAlignment="Left" Margin="22,178,0,0" Width="139" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="24" FontSize="20" Height="30" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="166,178,0,0" Width="120" FontFamily="Cascadia Code" FontSize="20" Height="30" VerticalAlignment="Top">
            <ComboBoxItem Content="Бизнес класс"/>
            <ComboBoxItem Content="Стандарт"/>
            <ComboBoxItem Content="Эконом класс"/>
        </ComboBox>
        <Button x:Name="AcceptButton_Копировать" Content="Отмена" HorizontalAlignment="Right" Height="50" Margin="0,0,216,50" VerticalAlignment="Bottom" Width="150" FontFamily="Cascadia Code" FontSize="36" Foreground="Black" BorderBrush="Black" Click="AcceptButton_Копировать_Click" RenderTransformOrigin="0.516,0.531">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFBEBEBE" Offset="0"/>
                    <GradientStop Color="#FF7C7C7C" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="AcceptButton_Копировать1" Content="Сохранить" HorizontalAlignment="Right" Height="50" Margin="0,0,10,49" VerticalAlignment="Bottom" Width="201" FontFamily="Cascadia Code" FontSize="36" Foreground="Black" BorderBrush="Black" Click="AcceptButton_Копировать_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFBEBEBE" Offset="0"/>
                    <GradientStop Color="#FF7C7C7C" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Content="id заказа:" HorizontalAlignment="Left" Margin="22,9,0,0" Width="139" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="24" FontSize="20" Height="30" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="166,10,0,0" TextWrapping="Wrap" Width="120" FontFamily="Cascadia Code" FontSize="20" Height="30" VerticalAlignment="Top"/>

    </Grid>
</Window>
